@model IEnumerable<bibliofile.Models.CollectedBooks>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Summary)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CollectedBookId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CollectedBookId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CollectedBookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
