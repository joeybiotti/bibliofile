@model IEnumerable<Bibliofile.Models.UserBooks>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IsRead)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserBookId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserBookId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserBookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
